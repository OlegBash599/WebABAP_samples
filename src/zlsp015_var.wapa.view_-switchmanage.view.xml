<mvc:View&nbsp;                                                                                                                                                                                                                                                
	xmlns:core="sap.ui.core"&nbsp;                                                                                                                                                                                                                                
	xmlns:mvc="sap.ui.core.mvc"&nbsp;                                                                                                                                                                                                                             
	xmlns="sap.m"&nbsp;                                                                                                                                                                                                                                           
	xmlns:layout="sap.ui.layout"                                                                                                                                                                                                                                  
	controllerName="zlsp015_varid.controller.SwitchManage"                                                                                                                                                                                                        
	xmlns:html="http://www.w3.org/1999/xhtml">                                                                                                                                                                                                                    
	<App>                                                                                                                                                                                                                                                         
		<pages>                                                                                                                                                                                                                                                      
			<!-- https://sapui5.hana.ondemand.com/#/api/sap.m.Page%23controlProperties -->                                                                                                                                                                              
			<Page title="Manage Switch" showNavButton="true" showFooter="true" navButtonPress="onNavBack">                                                                                                                                                              
				<content>                                                                                                                                                                                                                                                  
				<!--	<Text text="{SwitchData>/Description}" /> -->                                                                                                                                                                                                         
					<layout:VerticalLayout class="sapUiContentPadding" width="100%">                                                                                                                                                                                          
					<VBox>                                                                                                                                                                                                                                                    
						<Label text="Описание переменной:" labelFor="varDescription"/>                                                                                                                                                                                           
						<TextArea id="varDescription"                                                                                                                                                                                                                            
							value="{SwitchData>/Description}"                                                                                                                                                                                                                       
							growing="true" width="100%"/>                                                                                                                                                                                                                           
							                                                                                                                                                                                                                                                        
					</VBox>                                                                                                                                                                                                                                                   
					                                                                                                                                                                                                                                                          
					                                                                                                                                                                                                                                                          
                                                                                                                                                                                                                                                               
					<VBox>                                                                                                                                                                                                                                                    
						<Label text="ID переменной:" labelFor="varName"/>                                                                                                                                                                                                        
						<TextArea id="varName"                                                                                                                                                                                                                                   
							value="{SwitchData>/Name}"                                                                                                                                                                                                                              
							growing="true" width="100%"/>                                                                                                                                                                                                                           
							                                                                                                                                                                                                                                                        
					</VBox>                                                                                                                                                                                                                                                   
					                                                                                                                                                                                                                                                          
					<VBox>                                                                                                                                                                                                                                                    
						<CheckBox id="IdSwitchDel" text="Помечен на удаление" selected="{SwitchData>/IsDel}" />                                                                                                                                                                  
					</VBox>                                                                                                                                                                                                                                                   
					                                                                                                                                                                                                                                                          
					<VBox>                                                                                                                                                                                                                                                    
						<CheckBox id="IdSwitchDebugOn" text="Включен ли Debug для Switch" selected="{SwitchData>/DebugIsOn}" />                                                                                                                                                  
					</VBox>                                                                                                                                                                                                                                                   
					                                                                                                                                                                                                                                                          
					<VBox>                                                                                                                                                                                                                                                    
						<CheckBox id="IdSwitchActive" text="Активен ли SWITCH"&nbsp;                                                                                                                                                                                             
							selected="{SwitchData>/DebugIsOn}"&nbsp;                                                                                                                                                                                                                
							/>                                                                                                                                                                                                                                                      
					</VBox>                                                                                                                                                                                                                                                   
					                                                                                                                                                                                                                                                          
					                                                                                                                                                                                                                                                          
					<VBox>                                                                                                                                                                                                                                                    
						<Label text="Создал" labelFor="varCru"/>                                                                                                                                                                                                                 
						<TextArea id="varCru"                                                                                                                                                                                                                                    
							value="{SwitchData>/Cru}"                                                                                                                                                                                                                               
							growing="true" width="100%"/>                                                                                                                                                                                                                           
					</VBox>                                                                                                                                                                                                                                                   
					                                                                                                                                                                                                                                                          
					<VBox>                                                                                                                                                                                                                                                    
						<Label text="Дата создания" labelFor="varCrd"/>                                                                                                                                                                                                          
						<TextArea id="varCrd"                                                                                                                                                                                                                                    
							value="{SwitchData>/Crd}"                                                                                                                                                                                                                               
							growing="true" width="100%"/>                                                                                                                                                                                                                           
					</VBox>                                                                                                                                                                                                                                                   
					                                                                                                                                                                                                                                                          
					                                                                                                                                                                                                                                                          
					<VBox>                                                                                                                                                                                                                                                    
						<Hbox>                                                                                                                                                                                                                                                   
							<Button type="Accept" text="Сохранить с активацией" press="onSaveActivateSwitch">                                                                                                                                                                       
								<layoutData>                                                                                                                                                                                                                                           
									<FlexItemData growFactor="1"/>                                                                                                                                                                                                                        
								</layoutData>                                                                                                                                                                                                                                          
							</Button>                                                                                                                                                                                                                                               
							<Button type="Default" text="Сохранить с отлюченной активацией" press="onSaveDeactivateSwitch">                                                                                                                                                         
								<layoutData>                                                                                                                                                                                                                                           
									<FlexItemData growFactor="1"/>                                                                                                                                                                                                                        
								</layoutData>                                                                                                                                                                                                                                          
							</Button>                                                                                                                                                                                                                                               
							<Button type="Reject" text="Отменить и вернуться в главное меню" press="onCancel">                                                                                                                                                                      
								<layoutData>                                                                                                                                                                                                                                           
									<FlexItemData growFactor="1"/>                                                                                                                                                                                                                        
								</layoutData>                                                                                                                                                                                                                                          
							</Button>                                                                                                                                                                                                                                               
						</Hbox>                                                                                                                                                                                                                                                  
					</VBox>                                                                                                                                                                                                                                                   
					                                                                                                                                                                                                                                                          
					<VBox>                                                                                                                                                                                                                                                    
						<Hbox>                                                                                                                                                                                                                                                   
							<Button type="Default" icon="sap-icon://create" text="Создание записи по образцу"                                                                                                                                                                       
								press="onCreateNewAsTemplate">                                                                                                                                                                                                                         
								<layoutData>                                                                                                                                                                                                                                           
									<FlexItemData growFactor="1"/>                                                                                                                                                                                                                        
								</layoutData>                                                                                                                                                                                                                                          
							</Button>                                                                                                                                                                                                                                               
							<Button type="Default" icon="sap-icon://stop"  text="Удаление записи"                                                                                                                                                                                   
								press="onDeleteFromDatabase">                                                                                                                                                                                                                          
								<layoutData>                                                                                                                                                                                                                                           
									<FlexItemData growFactor="1"/>                                                                                                                                                                                                                        
								</layoutData>                                                                                                                                                                                                                                          
							</Button>                                                                                                                                                                                                                                               
						</Hbox>                                                                                                                                                                                                                                                  
					</VBox>                                                                                                                                                                                                                                                   
					                                                                                                                                                                                                                                                          
					</layout:VerticalLayout>                                                                                                                                                                                                                                  
				</content>                                                                                                                                                                                                                                                 
			</Page>                                                                                                                                                                                                                                                     
		</pages>                                                                                                                                                                                                                                                     
	</App>                                                                                                                                                                                                                                                        
</mvc:View>                                                                                                                                                                                                                                                    