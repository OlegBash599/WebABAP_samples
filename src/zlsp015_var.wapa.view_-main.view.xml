<mvc:View controllerName="zlsp015_varid.controller.Main" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"                                                                                                                                 
	xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" displayBlock="true" xmlns="sap.m">                                                                                                                                                                      
	<App>                                                                                                                                                                                                                                                         
		<pages>                                                                                                                                                                                                                                                      
			<Page title="{i18n>title}">                                                                                                                                                                                                                                 
				<content>                                                                                                                                                                                                                                                  
					<layout:VerticalLayout class="sapUiContentPadding" width="100%">                                                                                                                                                                                          
						<VBox>                                                                                                                                                                                                                                                   
							<Label text="ID-переменной" labelFor="varIDinput"/>                                                                                                                                                                                                     
							<Input                                                                                                                                                                                                                                                  
								id="varIDinput"&nbsp;                                                                                                                                                                                                                                  
								type="Text"&nbsp;                                                                                                                                                                                                                                      
								placeholder="Указать var ID ..."&nbsp;                                                                                                                                                                                                                 
								showSuggestion="true"&nbsp;                                                                                                                                                                                                                            
								startSuggestion="3"&nbsp;                                                                                                                                                                                                                              
								suggest="handleSuggest"                                                                                                                                                                                                                                
								suggestionItems="{VariableIDSet>/d/results}">                                                                                                                                                                                                          
								<suggestionItems>                                                                                                                                                                                                                                      
									<core:Item text="{VariableIDSet>Name}"/>                                                                                                                                                                                                              
								</suggestionItems>                                                                                                                                                                                                                                     
							</Input>                                                                                                                                                                                                                                                
						</VBox>                                                                                                                                                                                                                                                  
						<VBox>                                                                                                                                                                                                                                                   
							<Table id="varList" items="{VariableIDSet>/d/results}" headerText="Для перехода к операциям с переменной - щелкаем по ней">                                                                                                                             
								<columns>                                                                                                                                                                                                                                              
									<Column id="Name" width="12em"><Text text="Имя переменной"/></Column>                                                                                                                                                                                 
									<Column id="VarType" minScreenWidth="Tablet" demandPopin="true"><Text text="Тип переменной"/></Column>                                                                                                                                                
									<Column id="User" minScreenWidth="Tablet" demandPopin="true" hAlign="End"><Text text="Создал/Изменил"/></Column>                                                                                                                                      
								</columns>                                                                                                                                                                                                                                             
								<items>                                                                                                                                                                                                                                                
									<ColumnListItem type="Active" press="onPress">                                                                                                                                                                                                        
										<cells>                                                                                                                                                                                                                                              
											<ObjectIdentifier title="{VariableIDSet>Name}" text="{VariableIDSet>Description}" class="sapMTableContentMargin"/>                                                                                                                                  
											<Text text="{VariableIDSet>VarType}"/>                                                                                                                                                                                                              
											<Text text="{VariableIDSet>Cru} / {VariableIDSet>Chu}"/>                                                                                                                                                                                            
										</cells>                                                                                                                                                                                                                                             
									</ColumnListItem>                                                                                                                                                                                                                                     
								</items>                                                                                                                                                                                                                                               
							</Table>                                                                                                                                                                                                                                                
						</VBox>                                                                                                                                                                                                                                                  
						<!--                                                                                                                                                                                                                                                     
					<VBox>                                                                                                                                                                                                                                                    
						<Label text="Тип формы для вывода:" labelFor="PrintType"/>                                                                                                                                                                                               
                                                                                                                                                                                                                                                               
						<Select width="100%" id="PrintType" change="onPrintTypeChange"                                                                                                                                                                                           
							forceSelection="false"                                                                                                                                                                                                                                  
							items="{                                                                                                                                                                                                                                                
								path: 'PrintTypeSet>/d/results'                                                                                                                                                                                                                        
							}">                                                                                                                                                                                                                                                     
							<core:Item text="{PrintTypeSet>PrintTypeTx}" key="{PrintTypeSet>PrintTypeID}" />                                                                                                                                                                        
						</Select>                                                                                                                                                                                                                                                
					</VBox>                                                                                                                                                                                                                                                   
					-->                                                                                                                                                                                                                                                       
						<!--                                                                                                                                                                                                                                                     
					<VBox>                                                                                                                                                                                                                                                    
						<Label text="Raw Response:"/>                                                                                                                                                                                                                            
						<TextArea id="formDataJson"                                                                                                                                                                                                                              
							value="formJson:{}"                                                                                                                                                                                                                                     
							growing="true" width="100%"/>                                                                                                                                                                                                                           
					</VBox>                                                                                                                                                                                                                                                   
					-->                                                                                                                                                                                                                                                       
					</layout:VerticalLayout>                                                                                                                                                                                                                                  
				</content>                                                                                                                                                                                                                                                 
			</Page>                                                                                                                                                                                                                                                     
		</pages>                                                                                                                                                                                                                                                     
	</App>                                                                                                                                                                                                                                                        
</mvc:View>                                                                                                                                                                                                                                                    