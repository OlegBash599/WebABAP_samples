<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:c="sap.ui.core" xmlns:table="sap.ui.table"                                                                                                                                  
	controllerName="zlsp015_varid.controller.RangeManage" xmlns:html="http://www.w3.org/1999/xhtml">                                                                                                                                                              
	<App>                                                                                                                                                                                                                                                         
		<pages>                                                                                                                                                                                                                                                      
			<Page title="Range Management" showNavButton="true" showFooter="true" navButtonPress="onNavBack">                                                                                                                                                           
				<content>                                                                                                                                                                                                                                                  
					<VBox>                                                                                                                                                                                                                                                    
						<Hbox>                                                                                                                                                                                                                                                   
							<VBox>                                                                                                                                                                                                                                                  
								<Label text="Описание переменной:" labelFor="varDescription"/>                                                                                                                                                                                         
								<Input id="varDescription" value="{RangeData>/d/Description}" width="100%"/>                                                                                                                                                                           
							</VBox>                                                                                                                                                                                                                                                 
							<VBox>                                                                                                                                                                                                                                                  
								<Label text="ID переменной:" labelFor="varName"/>                                                                                                                                                                                                      
								<Input id="varName" value="{RangeData>/d/Name}" width="100%"/>                                                                                                                                                                                         
							</VBox>                                                                                                                                                                                                                                                 
							<VBox>                                                                                                                                                                                                                                                  
								<CheckBox id="IdSwitchDel" text="Помечен на удаление" selected="{RangeData>/d/IsDel}"/>                                                                                                                                                                
								<CheckBox id="IdSwitchDebugOn" text="Включен ли Debug для Switch" selected="{RangeData>/d/DebugIsOn}"/>                                                                                                                                                
							</VBox>                                                                                                                                                                                                                                                 
						</Hbox>                                                                                                                                                                                                                                                  
						<Hbox>                                                                                                                                                                                                                                                   
							<VBox>                                                                                                                                                                                                                                                  
								<Label text="Создал" labelFor="varCru"/>                                                                                                                                                                                                               
								<Input id="varCru" value="{RangeData>/d/Cru}" width="100%"/>                                                                                                                                                                                           
							</VBox>                                                                                                                                                                                                                                                 
							<VBox>                                                                                                                                                                                                                                                  
								<Label text="Дата создания" labelFor="varCrd"/>                                                                                                                                                                                                        
								<DatePicker id="varCrd"                                                                                                                                                                                                                                
								value="{                                                                                                                                                                                                                                               
										path:'RangeData>/d/Crd',&nbsp;                                                                                                                                                                                                                       
										formatter: '.formatter.JsonDate2Show'                                                                                                                                                                                                                
										}"                                                                                                                                                                                                                                                   
								width="100%"/>                                                                                                                                                                                                                                         
							</VBox>                                                                                                                                                                                                                                                 
							<VBox>                                                                                                                                                                                                                                                  
								<Label text="Изменил" labelFor="varChu"/>                                                                                                                                                                                                              
								<Input id="varChu" value="{RangeData>/d/Chu}" width="100%"/>                                                                                                                                                                                           
							</VBox>                                                                                                                                                                                                                                                 
							<VBox>                                                                                                                                                                                                                                                  
								<Label text="Дата Изменения" labelFor="varCrd"/>                                                                                                                                                                                                       
								<DatePicker id="varChd" value="{RangeData>/d/Chd}" width="100%" valueFormat="yyyy-MM-dd" displayFormat="long"/>                                                                                                                                        
							</VBox>                                                                                                                                                                                                                                                 
						</Hbox>                                                                                                                                                                                                                                                  
					</VBox>                                                                                                                                                                                                                                                   
					<table:Table&nbsp;                                                                                                                                                                                                                                        
						rows="{RangeData>/d/VariableValueSet/results}" id="TableVarVal"                                                                                                                                                                                          
						selectionMode="MultiToggle" visibleRowCount="12" paste="onPaste" ariaLabelledBy="title">                                                                                                                                                                 
						<table:extension>                                                                                                                                                                                                                                        
							<OverflowToolbar>                                                                                                                                                                                                                                       
								<Title id="varValTitle" text="Значения переменной"/>                                                                                                                                                                                                   
								<Button type="Default" text="Добавить запись" press="onAddRow" />                                                                                                                                                                                      
								<Button type="Default" text="Сохранить данные" press="onSaveModel" />                                                                                                                                                                                  
							</OverflowToolbar>                                                                                                                                                                                                                                      
						</table:extension>                                                                                                                                                                                                                                       
						<table:columns>                                                                                                                                                                                                                                          
							<table:Column width="10rem">                                                                                                                                                                                                                            
								<Label text="Include/Exclude"/>                                                                                                                                                                                                                        
								<table:template>                                                                                                                                                                                                                                       
									<Select selectedKey="{RangeData>Sign}" id="IdIncludeExclude">                                                                                                                                                                                         
										<core:Item xmlns:core="sap.ui.core" text="Include" key="I"/>                                                                                                                                                                                         
										<core:Item xmlns:core="sap.ui.core" text="Exclude" key="E"/>                                                                                                                                                                                         
									</Select>                                                                                                                                                                                                                                             
								</table:template>                                                                                                                                                                                                                                      
							</table:Column>                                                                                                                                                                                                                                         
							<table:Column width="10rem">                                                                                                                                                                                                                            
								<Label text="SelectOption"/>                                                                                                                                                                                                                           
								<table:template>                                                                                                                                                                                                                                       
									<Select selectedKey="{RangeData>Opti}" id="IdSelOption">                                                                                                                                                                                              
										<core:Item xmlns:core="sap.ui.core" text="EQual" key="EQ"/>                                                                                                                                                                                          
										<core:Item xmlns:core="sap.ui.core" text="Greater or Equal" key="GE"/>                                                                                                                                                                               
									</Select>                                                                                                                                                                                                                                             
								</table:template>                                                                                                                                                                                                                                      
							</table:Column>                                                                                                                                                                                                                                         
							<table:Column width="11rem">                                                                                                                                                                                                                            
								<Label text="Low Value"/>                                                                                                                                                                                                                              
								<table:template>                                                                                                                                                                                                                                       
									<Input value="{RangeData>Low}"/>                                                                                                                                                                                                                      
								</table:template>                                                                                                                                                                                                                                      
							</table:Column>                                                                                                                                                                                                                                         
							<table:Column width="11rem">                                                                                                                                                                                                                            
								<Label text="High Value"/>                                                                                                                                                                                                                             
								<table:template>                                                                                                                                                                                                                                       
									<Input value="{RangeData>High}"/>                                                                                                                                                                                                                     
								</table:template>                                                                                                                                                                                                                                      
							</table:Column>                                                                                                                                                                                                                                         
						</table:columns>                                                                                                                                                                                                                                         
					</table:Table>                                                                                                                                                                                                                                            
				</content>                                                                                                                                                                                                                                                 
			</Page>                                                                                                                                                                                                                                                     
		</pages>                                                                                                                                                                                                                                                     
	</App>                                                                                                                                                                                                                                                        
</mvc:View>                                                                                                                                                                                                                                                    